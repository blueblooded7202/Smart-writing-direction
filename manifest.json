{
  "manifest_version": 3,
  "name": "اتجاه الكتابة الذكي",
  "version": "1.0",
  "description": "إضافة تقوم بتغيير اتجاه النص تلقائيًا في الحقول القابلة للتعديل مع دعم التبديل اليدوي.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_icon": "icons/icon_48.png",
    "default_title": "Auto Text Direction"
  }
}
